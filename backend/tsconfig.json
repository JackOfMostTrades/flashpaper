{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "es6",
		"moduleResolution": "node",
		"outDir": "./dist",
		"lib": [
			"es6",
			"dom"
		],
		"module": "commonjs",
        "declaration": true,
        "strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"pretty" : true,
		"removeComments": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"resolveJsonModule": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"types": [
			"node"
		]
	},
	"include": [
		"./lib"
	]
}
